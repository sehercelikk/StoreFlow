@model List<Order>
@{
    ViewData["Title"] = "OrderListByStatus";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Listesi</h4>

                <div class="table-responsive">
                    <form asp-action="OrderListByStatus" method="get" class="mb-3">
                        <div class="input-group" style="max-width: 500px;">
                            <input type="text" name="status" class="form-control" placeholder="Durumu giriniz" />
                            <button class="btn btn-primary" type="submit">Ara</button>
                        </div>
                    </form>


                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>

                                    <td>@count</td>
                                    <td>@item.OrderId</td>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Status</td>

                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-primary">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder" class="btn btn-warning">Ekle</a>

                </div>
            </div>
        </div>
    </div>
</div>


