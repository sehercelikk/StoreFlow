@model List<Category>
@{
    ViewData["Title"] = "ReverseCategory";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h3>
    @ViewBag.v
</h3>
<h3>
    @ViewBag.v2
</h3>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tersten Kategori Listesi</h4>
                <p class="card-description">
                    Kategori işlemlerini buradan yapabilirsiniz
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Adı</th>
                                <th>Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.Name</td>
                                    @if (item.Status == true)
                                    {
                                        <td><label class="badge badge-success badge-pill">Aktif</label></td>
                                    }
                                    else
                                    {
                                        <td><label class="badge badge-secondary badge-pill">Pasif</label></td>

                                    }
                                    <td><a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-outline-primary">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Categories/CreateCategory" class="btn btn-warning">Ekle</a>

                </div>
            </div>
        </div>
    </div>
</div>



