@model List<Message>

@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;

}




<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müşteri Listesi İstanbul Hariç </h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Gönderen</th>
                                <th>Konu</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Mesajı Aç</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.SenderNameSurname</td>
                                    <td>@item.Title</td>
                                    <td>@item.IsRead</td>
                                    <td>@item.Datetime</td>

                                    <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-primary">Güncelle</a></td>
                                    <td><a href="/Message/UpdateMessage/@item.MessageId" class="btn btn-outline-warning">Mesajı Aç</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Message/CreateMessage" class="btn btn-warning">Yeni Mesaj Ekle</a>

                </div>
            </div>
        </div>
    </div>
</div>



